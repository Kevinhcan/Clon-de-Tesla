---
import Layout from "../layouts/Layout.astro";
import LandingHeader from "../components/LandingHeader.astro";
import Section from "../components/Section.astro";
import FooterTesla from "../components/FooterTesla.astro";
import FooterTeslaB from "../components/FooterTeslaB.astro";
---

<Layout title="Tesla">
  <LandingHeader />

  <main
    class="snap-y snap-mandatory relative w-full h-screen overflow-auto scroll-smooth"
  >
    <div class="snap-center">
      <!-- Seccion 1 -->
      <Section
        tittle="Disfrute de Tesla"
        subTittle="Programe una prueba de conducción hoy mismo"
        color="white"
      >
        <div slot="footer">
          <a
            class="border-[3px] border-white bg-white/5 backdrop-blur-3xl px-12 py-2 rounded text-sm font-semibold hover:bg-white hover:text-black transition duration-1000"
            href="#"
          >
            Prueba de conducción
          </a>
        </div>
        <video
          slot="background"
          class="object-center object-cover h-full w-full"
          autoplay
          muted
          loop
          src="video.webm"></video>
      </Section>
    </div>
    <!-- Seccion 2 -->
    <div class="snap-center">
      <Section
        tittle={"Modelo 3"}
        subTittle={"Concertar una prueba de conducción"}
        color={"black"}
      >
        <img
          slot="Model"
          class="object-center object-cover h-full w-full"
          src="https://digitalassets.tesla.com/tesla-contents/image/upload/h_2560,w_4096,c_fit,f_auto,q_auto:best/Homepage-Model-3-Desktop-LHD"
          alt=""
        />
        <div slot="footer" class="gap-x-6 flex mx-auto">
          <FooterTeslaB text={"Explorar inventari"} />
          <FooterTesla text={"Pedido personalizado"} />
        </div>
      </Section>
    </div>
    <!-- Seccion 3 -->
    <div class="snap-center">
      <Section
        tittle={"Modelo Y"}
        subTittle={"Concertar una prueba de conducción"}
        color={"black"}
      >
        <img
          slot="Model"
          class="object-center object-cover h-full w-full"
          src="https://digitalassets.tesla.com/tesla-contents/image/upload/h_2400,w_2880,c_fit,f_auto,q_auto:best/Homepage-Model-Y-Global-Desktop"
          alt=""
        />
        <div slot="footer" class="gap-x-6 flex mx-auto">
          <FooterTeslaB text={"Explorar inventari"} />
          <FooterTesla text={"Pedido personalizado"} />
        </div>
      </Section>
    </div>
    <!-- Seccion 4 -->
    <div class="snap-center">
      <Section
        tittle={"Modelo S"}
        subTittle={"Concertar una prueba de conducción"}
        color={"black"}
      >
        <img
          slot="Model"
          class="object-center object-cover h-full w-full"
          src="https://digitalassets.tesla.com/tesla-contents/image/upload/f_auto,q_auto:best/Model-S-homepage-desktop"
          alt=""
        />
        <div slot="footer" class="gap-x-6 flex mx-auto">
          <FooterTeslaB text={"Pedido personalizado"} />
          <FooterTesla text={"Saber más"} />
        </div>
      </Section>
    </div>
    <!-- Seccion 5 -->
    <div class="snap-center">
      <Section
        tittle={"Modelo X"}
        subTittle={"Concertar una prueba de conducción"}
        color={"black"}
      >
        <img
          slot="Model"
          class="object-center object-cover h-full w-full"
          src="https://digitalassets.tesla.com/tesla-contents/image/upload/h_1800,w_2880,c_fit,f_auto,q_auto:best/Homepage-Model-X-Desktop-LHD"
          alt=""
        />
        <div slot="footer" class="gap-x-6 flex mx-auto">
          <FooterTeslaB text={"Pedido personalizado"} />
          <FooterTesla text={"Saber más"} />
        </div>
      </Section>
    </div>
    <!-- Seccion 6 -->
    <div class="snap-center">
      <Section
        tittle={"Solar y Powerwall"}
        subTittle={"Concertar una prueba de conducción"}
        color={"black"}
      >
        <img
          slot="Model"
          class="object-center object-cover h-full w-full"
          src="https://digitalassets.tesla.com/tesla-contents/image/upload/f_auto,q_auto:best/Desktop_SolarPanels"
          alt=""
        />
        <div slot="footer">
          <FooterTeslaB text={"Saber más"} />
        </div>
      </Section>
    </div>
    <!-- Seccion 7 -->
    <div class="snap-center">
      <Section
        tittle={"Accesorios"}
        subTittle={"Concertar una prueba de conducción"}
        color={"black"}
      >
        <img
          slot="Model"
          class="object-center object-cover h-full w-full"
          src="https://digitalassets.tesla.com/tesla-contents/image/upload/f_auto,q_auto/Homepage-Accessories-Desktop-EMEA.jpg"
          alt=""
        />
        <div slot="footer">
          <FooterTesla text={"Comprar ahora"} />
        </div>
      </Section>
    </div>
  </main>
</Layout>
